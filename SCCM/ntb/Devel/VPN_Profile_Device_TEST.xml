<VPNProfile>
    <DnsSuffix>staff.ucn.muni.cz</DnsSuffix>
    <NativeProfile>
        <Servers>vpn.ucn.muni.cz</Servers>
        <NativeProtocolType>IKEv2</NativeProtocolType>
        <Authentication>
            <MachineMethod>Certificate</MachineMethod>
        </Authentication>
        <RoutingPolicyType>SplitTunnel</RoutingPolicyType>
        <!-- disable the addition of a class based route for the assigned IP address on the VPN interface -->        
        <DisableClassBasedDefaultRoute>true</DisableClassBasedDefaultRoute>
    </NativeProfile>
    <DeviceTunnel>true</DeviceTunnel>
    <AlwaysOn>true</AlwaysOn>
    <RememberCredentials>true</RememberCredentials>
	<RegisterDNS>true</RegisterDNS>	
	
	<!-- inside/outside detection --> 
    <TrustedNetworkDetection>ucn.muni.cz,staff.ucn.muni.cz,fss.ucn.muni.cz,kuk.ucn.muni.cz,law.ucn.muni.cz,phil.ucn.muni.cz,telc.ucn.muni.cz,ups.ucn.muni.cz,zam.ucn.muni.cz,pharm.muni.cz</TrustedNetworkDetection>
    
    <!-- NRPT enable -->          	
	<DomainNameInformation>
        <DomainName>.ucn.muni.cz</DomainName>
        <DnsServers>147.251.63.67,147.251.63.69</DnsServers>
    </DomainNameInformation>

    <!-- Static routes to MUNI -->          	    
	<!-- VPN clients -->          	    	
	<Route>
        <Address>10.16.32.0</Address>
        <PrefixSize>20</PrefixSize>
    </Route>
	<Route>
        <Address>10.16.224.0</Address>
        <PrefixSize>20</PrefixSize>
    </Route>
	<!-- All muni -->   
    <Route>
        <Address>147.251.0.0</Address>
        <PrefixSize>16</PrefixSize>
    </Route>
</VPNProfile>
