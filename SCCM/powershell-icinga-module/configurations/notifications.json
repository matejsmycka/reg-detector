{
    "default-notification-for-host":{
        "interval": 1800.0,
        "user_groups": [ "groupname" ],
        "command": "mail-host-notification",
        "states": ["Down"],
        "vars": {
            "notes":"Use this for servers only "
        }
     },
    "wake-up-only-honza":{
        "interval": 1000.0,
        "users": ["honza@institute"],
        "command": "mail-service-notification",
        "states": ["Down", "Up"],
        "vars": {
            "notes":"Use this for services only - you can add note"
        }
     },
    "default-notification-for-service":{
        "interval": 600.0,
        "user_groups": [ "groupname" ],
        "command": "mail-service-notification",
        "states": ["Warning", "Critical", "Unknown"],
        "types": ["Problem"],
        "vars": {
            "notes":"Use this for services only"
        }
     }
}