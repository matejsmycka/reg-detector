<ApplicationDef>
	<Application>
		<Name>DeepL</Name>
		<Description>Fast, accurate, and secure translations.</Description>
		<Publisher>https://www.deepl.com/</Publisher>
		<AutoInstall>True</AutoInstall>
		<UserDocumentation>https://www.deepl.com/en/app/</UserDocumentation>
		<Icon>DeepL.png</Icon>
	</Application>
	<Downloads>
		<Download DeploymentType="DeploymentType1">
			<PrefetchScript></PrefetchScript>
			<URL>https://www.deepl.com/windows/download/full/DeepLSetup.exe</URL>
			<DownloadFileName>DeepL-setup.exe</DownloadFileName>
			<Version></Version>
			<FullVersion></FullVersion>
			<DownloadVersionCheck>$Version = ((Get-item $TempDir\$DownloadFileName).VersionInfo.FileVersion).TrimStart().TrimEnd()</DownloadVersionCheck>
			<ExtraCopyFunctions></ExtraCopyFunctions>
		</Download>
	</Downloads>
	<DeploymentTypes>
		<DeploymentType Name="DeploymentType1">
			<DeploymentTypeName>DeepL Silent Install</DeploymentTypeName>
			<InstallationType>Script</InstallationType>
			<InstallationBehaviorName>DeepL.exe</InstallationBehaviorName>
			<CacheContent>False</CacheContent>
			<BranchCache>True</BranchCache>
			<ContentFallback>True</ContentFallback>
			<OnSlowNetwork>Download</OnSlowNetwork>
			<InstallProgram>cmd /c DeepL-setup.exe -s</InstallProgram>
			<UninstallCmd>"%LocalAppData%\DeepL\Update.exe" --uninstall -s</UninstallCmd>
			<InstallationBehaviorType>InstallForSystem</InstallationBehaviorType>
			<LogonReqType>WhetherOrNotUserLoggedOn</LogonReqType>
			<UserInteractionMode>Hidden</UserInteractionMode>
			<EstRuntimeMins>10</EstRuntimeMins>
			<MaxRuntimeMins>40</MaxRuntimeMins>
			<RebootBehavior>BasedOnExitCode</RebootBehavior>
			<DetectionMethodType>Custom</DetectionMethodType>
			<CustomDetectionMethods>
				<DetectionClause>
					<DetectionClauseType>RegistryKeyValue</DetectionClauseType>
					<Hive>LocalMachine</Hive>
					<KeyName>SOFTWARE\WOW6432Node\Microsoft\Windows\CurrentVersion\Uninstall\winscp3_is1</KeyName>
					<ValueName>DisplayVersion</ValueName>
					<PropertyType>Version</PropertyType>
					<ExpressionOperator>IsEquals</ExpressionOperator>
					<ExpectedValue>$Version</ExpectedValue>
					<Value>True</Value>
				</DetectionClause>
			</CustomDetectionMethods>
		</DeploymentType>
	</DeploymentTypes>
	<Distribution>
		<DistributeContent>True</DistributeContent>
	</Distribution>
	<Deployments TestFirst="True">
		<Deployment type="Test">
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - WinSCP - TEST</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Available</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - WinSCP - Available</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - WinSCP - Required</DeploymentCollection>
		</Deployment>
	</Deployments>
</ApplicationDef>
