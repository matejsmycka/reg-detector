<ApplicationDef>
	<Application>
		<Name>Skype</Name>
		<Description>Skype is a telecommunications application software</Description>
		<Publisher>Microsoft</Publisher>
		<AutoInstall>True</AutoInstall>
		<UserDocumentation>https://www.skype.com</UserDocumentation>
		<Icon>skype.png</Icon>
	</Application>
	<Downloads>
		<Download DeploymentType="DeploymentType1">
			<PrefetchScript></PrefetchScript>
			<URL>https://go.skype.com/skype.download</URL>
			<DownloadFileName>skype-setup.exe</DownloadFileName>
			<Version></Version>
			<FullVersion></FullVersion>
			<DownloadVersionCheck>
                $Version = (Get-ChildItem $Global:TempDir\skype-setup.exe | Get-ExtensionAttribute -ExtensionAttribute Fileversion).FileVersion
                $FullVersion = (Get-ChildItem $Global:TempDir\skype-setup.exe | Get-ExtensionAttribute -ExtensionAttribute Productversion).Productversion
            </DownloadVersionCheck>
			<ExtraCopyFunctions></ExtraCopyFunctions>
		</Download>
	</Downloads>
	<DeploymentTypes>
		<DeploymentType Name="DeploymentType1">
			<DeploymentTypeName>Skype Silent Install</DeploymentTypeName>
			<InstallationType>Script</InstallationType>
			<InstallationBehaviorName>skype.exe</InstallationBehaviorName>
			<CacheContent>False</CacheContent>
			<BranchCache>True</BranchCache>
			<ContentFallback>True</ContentFallback>
			<OnSlowNetwork>Download</OnSlowNetwork>
			<InstallProgram>cmd /c skype-setup.exe /verysilent /suppressmsgboxes /norestart &amp;&amp; DEL /Q "%Public%\Desktop\Skype.lnk"</InstallProgram>
			<UninstallCmd>"%programfiles(x86)%\Microsoft\Skype for Desktop\unins000.exe" /verysilent /norestart</UninstallCmd>
			<InstallationBehaviorType>InstallForSystem</InstallationBehaviorType>
			<LogonReqType>WhetherOrNotUserLoggedOn</LogonReqType>
			<UserInteractionMode>Hidden</UserInteractionMode>
			<EstRuntimeMins>10</EstRuntimeMins>
			<MaxRuntimeMins>30</MaxRuntimeMins>
			<RebootBehavior>BasedOnExitCode</RebootBehavior>
			<DetectionMethodType>Custom</DetectionMethodType>
			<CustomDetectionMethods>
				<DetectionClause>
					<DetectionClauseType>File</DetectionClauseType>
					<Name>Skype.exe</Name>
					<Path>%programfiles(x86)%\Microsoft\Skype for Desktop</Path>
					<PropertyType>Version</PropertyType>
					<ExpectedValue>$Version</ExpectedValue>
					<ExpressionOperator>isEquals</ExpressionOperator>
					<Value>True</Value>
				</DetectionClause>
			</CustomDetectionMethods>
		</DeploymentType>
	</DeploymentTypes>
	<Distribution>
		<DistributeContent>True</DistributeContent>
	</Distribution>
	<Deployments TestFirst="True">
		<Deployment type="Test">
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - Skype - TEST</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Available</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - Skype - Available - CSS</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - Skype - Required - CSS</DeploymentCollection>
		</Deployment>
	</Deployments>
</ApplicationDef>
