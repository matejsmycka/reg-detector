<ApplicationDef>
	<Application>
		<Name>ownCloud</Name>
		<Description>Access and share your files, calendars, contacts, mail and more from any device; on your terms.</Description>
		<Publisher></Publisher>
		<AutoInstall>True</AutoInstall>
		<UserDocumentation>https://doc.owncloud.org/</UserDocumentation>
		<Icon>owncloud.png</Icon>
	</Application>
	<Downloads>
		<Download DeploymentType="DeploymentType1">
			<PrefetchScript>
			try {
    $url = "https://download.owncloud.com/desktop/ownCloud/stable/latest/win/"
	$allver = (Invoke-WebRequest -Uri $URL | Select -ExpandProperty Links | select -expandProperty innerText | sort asc).Trim()
	[regex]$r = "ownCloud-([0-9.]*)x64.msi"
	$msi = $r.Matches($allver) | sort -Descending -Property Value
	$Version = (($msi.Groups[1].Value).Split('.')|select -first 4) -join "."
	$URL = $URL+($msi.Groups[0].Value)
} catch {
				$ErrorMessage = $_.Exception.Message
				$FullyQualified = $_.FullyQualifiedErrorID
				Add-LogContent "[PrefetchScript] OwnCloud: Error while downloading."
				Add-LogContent "[PrefetchScript] ERROR: $ErrorMessage"
				Add-LogContent "[PrefetchScript] ERROR: $FullyQualified"
				Add-LogContent "[PrefetchScript] ERROR: $($_.CategoryInfo.Category): $($_.CategoryInfo.Reason)"
}
</PrefetchScript>
			<URL></URL>
			<DownloadFileName>owncloud.msi</DownloadFileName>
			<Version></Version>
			<FullVersion></FullVersion>
			<DownloadVersionCheck></DownloadVersionCheck>
			<ExtraCopyFunctions></ExtraCopyFunctions>
		</Download>
	</Downloads>
	<DeploymentTypes>
		<DeploymentType Name="DeploymentType1">
			<DeploymentTypeName>ownCloud Silent Install</DeploymentTypeName>
			<InstallationType>MSI</InstallationType>
			<Language>English</Language>
			<CacheContent>False</CacheContent>
			<BranchCache>True</BranchCache>
			<ContentFallback>True</ContentFallback>
			<OnSlowNetwork>Download</OnSlowNetwork>
			<InstallationMSI>owncloud.msi</InstallationMSI>
			<InstallProgram>cmd /c msiexec.exe /i `"owncloud.msi`" SKIPAUTOUPDATE=`"1`" NO_DESKTOP_SHORTCUT=`"1`" REBOOT=ReallySuppress /qn</InstallProgram>
			<UninstallCmd></UninstallCmd>	
			<InstallationBehaviorType>InstallForSystem</InstallationBehaviorType>
			<LogonReqType>WhetherOrNotUserLoggedOn</LogonReqType>
			<UserInteractionMode>Hidden</UserInteractionMode>
			<ReqUserInteraction>False</ReqUserInteraction>
			<EstRuntimeMins>15</EstRuntimeMins>
			<MaxRuntimeMins>60</MaxRuntimeMins>
			<RebootBehavior>NoAction</RebootBehavior>
			<DetectionMethodType>MSI</DetectionMethodType>
		</DeploymentType>
	</DeploymentTypes>
	<Distribution>
		<DistributeContent>True</DistributeContent>
	</Distribution>
	<Deployments TestFirst="True">
		<Deployment type="Test">
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - ownCloud - TEST</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Available</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - ownCloud - Available - CSS</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - ownCloud - Required - CSS</DeploymentCollection>
		</Deployment>
	</Deployments>
</ApplicationDef>
