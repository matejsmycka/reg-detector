<ApplicationDef>
	<Application>
		<Name>PyCharm</Name>
		<Description>PyCharm provides smart code completion, code inspections, on-the-fly error highlighting and quick-fixes, along with automated code refactorings and rich navigation capabilities.</Description>
		<Publisher>JetBrains</Publisher>
		<AutoInstall>True</AutoInstall>
		<UserDocumentation>https://www.jetbrains.com/pycharm/learning-center/</UserDocumentation>
		<Icon>pycharm.png</Icon>
	</Application>
	<Downloads>
		<Download DeploymentType="DeploymentType1">
			<PrefetchScript>
			try {
    [Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12
    $All = Invoke-WebRequest -Uri "https://data.services.jetbrains.com/products/releases?code=PCP&amp;latest=true&amp;type=release" | ConvertFrom-Json
    $Version = $All.PCP.version
    $FullVersion = $All.PCP.build
    $URL = $All.PCP.downloads.windows.link
} catch {
				$ErrorMessage = $_.Exception.Message
				$FullyQualified = $_.FullyQualifiedErrorID
				Add-LogContent "[PrefetchScript] Python: Error while downloading."
				Add-LogContent "[PrefetchScript] ERROR: $ErrorMessage"
				Add-LogContent "[PrefetchScript] ERROR: $FullyQualified"
				Add-LogContent "[PrefetchScript] ERROR: $($_.CategoryInfo.Category): $($_.CategoryInfo.Reason)"
}
</PrefetchScript>
			<URL></URL>
			<DownloadFileName>pycharm-pro.exe</DownloadFileName>
			<Version></Version>
			<FullVersion></FullVersion>
			<DownloadVersionCheck>$Version</DownloadVersionCheck>
			<ExtraCopyFunctions></ExtraCopyFunctions>
		</Download>
	</Downloads>
	<DeploymentTypes>
		<DeploymentType Name="DeploymentType1">
			<DeploymentTypeName>PyCharm Pro Silent Install</DeploymentTypeName>
			<InstallationType>Script</InstallationType>
			<Language>English</Language>
			<CacheContent>False</CacheContent>
			<BranchCache>True</BranchCache>
			<ContentFallback>True</ContentFallback>
			<OnSlowNetwork>Download</OnSlowNetwork>
			<InstallProgram>cmd /c pycharm-pro.exe /S /CONFIG=silent.config</InstallProgram>
			<InstallationMSI></InstallationMSI>
			<UninstallCmd>cmd /c "C:\Program Files\JetBrains\PyCharm REPLACEMEWITHTHEAPPVERSION\bin\Uninstall.exe" /S</UninstallCmd>
			<UninstallationStartIn></UninstallationStartIn>
			<InstallationBehaviorType>InstallForSystem</InstallationBehaviorType>
			<LogonReqType>WhetherOrNotUserLoggedOn</LogonReqType>
			<UserInteractionMode>Hidden</UserInteractionMode>
			<EstRuntimeMins>15</EstRuntimeMins>
			<MaxRuntimeMins>60</MaxRuntimeMins>
			<RebootBehavior>BasedOnExitCode</RebootBehavior>
			<DetectionMethodType>Custom</DetectionMethodType>
			<CustomDetectionMethods>
				<DetectionClause>
					<DetectionClauseType>RegistryKeyValue</DetectionClauseType>
					<Hive>LocalMachine</Hive>
					<KeyName>SOFTWARE\WOW6432Node\Microsoft\Windows\CurrentVersion\Uninstall\PyCharm $Version</KeyName>
					<ValueName>DisplayVersion</ValueName>
					<PropertyType>Version</PropertyType>
					<ExpectedValue>$FullVersion</ExpectedValue>
					<Value>true</Value>
					<ExpressionOperator>IsEquals</ExpressionOperator>
					<Is64Bit>true</Is64Bit>
				</DetectionClause>
            </CustomDetectionMethods>
		</DeploymentType>
	</DeploymentTypes>
	<Distribution>
		<DistributeContent>True</DistributeContent>
	</Distribution>
	<Deployments TestFirst="True">
		<Deployment type="Test">
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - PyCharm - TEST</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Available</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - PyCharm - Available - CSS</DeploymentCollection>
		</Deployment>
		<Deployment>
			<DeploySoftware>True</DeploySoftware>
			<DeployAction>Install</DeployAction>
			<DeployPurpose>Required</DeployPurpose>
			<UserNotification>DisplaySoftwareCenterOnly</UserNotification>
			<DeploymentCollection>WKS - SD - PyCharm - Required - CSS</DeploymentCollection>
		</Deployment>
	</Deployments>
</ApplicationDef>
