<?xml version="1.0" encoding="utf-8" ?>
<stateResolver>
    <defaultOutput priority="99" state="OK" description="Connection to WIN-PAK database is OK"/>

    <extractor name="default">
        <getAttribute path="WinPakDatabaseConnection.connected" key="Connected" type="String" />
    </extractor>

    <multiSwitch name="ConnectSwitch" choice="Connected">
        <switchNode case="false">
            <result key="State" value="Error" />
            <result key="Priority" value="10" />
            <result key="Description" value="Connection to WIN-PAK database is malfunction" />
        </switchNode>
    </multiSwitch>

</stateResolver>